<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainPage"
    android:id="@+id/relativechoice">


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/img_list"
        android:src="@drawable/ic_launcher"
        android:layout_below="@+id/name_result"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        android:fitsSystemWindows="true"
        android:text="Large Text"
        android:id="@+id/name_result"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/img_list"
        android:layout_toEndOf="@+id/img_list"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Medium Text"
        android:id="@+id/distance_result"
        android:fitsSystemWindows="true"
        android:visibility="invisible"
        android:layout_below="@+id/phone_result"
        android:layout_alignLeft="@+id/phone_result"
        android:layout_alignStart="@+id/phone_result" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:fitsSystemWindows="true"
        android:id="@+id/phone_result"
        android:layout_below="@+id/name_result"
        android:layout_alignLeft="@+id/name_result"
        android:layout_alignStart="@+id/name_result" />

</RelativeLayout>
